{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "apps/backend/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/project",
      "dest": "apps/backend/index.ts"
    },
    {
      "src": "/cv",
      "dest": "apps/backend/index.ts"
    },
    {
      "src": "/experience",
      "dest": "apps/backend/index.ts"
    },
    {
       "src": "/project-images",
       "dest": "apps/backend/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/dist/$1"
    }
  ]
}