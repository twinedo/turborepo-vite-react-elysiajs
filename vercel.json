{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "apps/backend/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/dist/$1",
      "continue": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/dist/index.html"
    }
  ]
}